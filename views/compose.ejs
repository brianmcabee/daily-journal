<%- include('partials/header');  -%>

    <h1>Compose</h1>

    <form class="" action="/compose" method="post">
      <div class="form-group">
        <label for="entryTitle">Title</label>
        <input class="form-control" type="text" name="entryTitle" autocomplete="off" required>
      </div>

      <div class="form-group">
        <label for="entryText">Post</label>
        <textarea class="form-control" name="entryText" autocomplete="off" rows="8" required></textarea>
      </div>

      <button class="btn btn-primary" type="submit" name="submit">Publish</button>
    </form>


<%- include('partials/footer'); -%>
